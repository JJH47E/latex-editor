\DeclareFontShape{T1}{cmr}{m}{n}{%
      <5><6><7><8><9>gen*dcr%
      <10><10.95>dcr10%
      <12><14.4>dcr12%
      <17.28><20.74><24.88><29.86><35.83><42.99><51.59>dcr17}{}
\DeclareFontShape{T1}{cmr}{m}{sl}{%
      <5><6><7><8>dcsl8%
      <9>dcsl9%
      <10><10.95>dcsl10%
      <12><14.4>dcsl12%
      <17.28><20.74><24.88><29.86><35.83><42.99><51.59>dcsl17%
      }{}
\DeclareFontShape{T1}{cmr}{m}{it}{%
      <5><6>dcti7%
      <7><8><9>gen*dcti%
      <10><10.95>dcti10%
      <12><14.4>dcti12%
      <17.28><20.74><24.88><29.86><35.83><42.99><51.59>dcti17%
      }{}
\DeclareFontShape{T1}{cmr}{m}{sc}{%
      <5><6><7><8><9><10><10.95>dccsc10%
      <12><14.4>dccsc12%
      <17.28><20.74><24.88><29.86><35.83><42.99><51.59>dccsc17%
      }{}
\DeclareFontShape{T1}{cmr}{m}{ui}{%
      <5><6>dcu7%
      <7><8><9>gen*dcu%
      <10><10.95>dcu10%
      <12><14.4>dcu12%
      <17.28><20.74><24.88><29.86><35.83><42.99><51.59>dcu17%
      }{}
%%%%%%% bold series
